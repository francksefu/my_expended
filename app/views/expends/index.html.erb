
<div class="row p-3">
<div class="col-md-3"> </div>
<div class='col-md-6 d-block mx-auto'>
  <div class='text-secondary w-100 d-flex justify-content-between border border-1 p-3'>
    <%= image_tag("#{@group.icon}.png", :alt => "picture") %>
    <h3><%= @group.name %> </h3>
    
    <h6><%= @group.expends.where(author_id: current_user.id).sum(:amount) %> $ </h6>
  </div>
  <% if @expends.empty? %>
  <h5> Not expends for this user in this group </h5>
  <% else %>

    <% @expends.each do |expend| %>
      <div class='text-secondary w-100 d-flex justify-content-between border border-1'>
        <h3><%= expend.name %> </h3>
        <h6><%= expend.amount %></h6>
      </div>
    <% end %>
  <% end %>
  <a href='<%= new_expend_path %>' class='btn btn-primary green mt-3 mb-3 d-block mx-auto'> Create expend </a>
</div>
</div>